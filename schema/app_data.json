{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "app_data",
  "type": "object",
  "required": [
    "app",
    "items"
  ],
  "properties": {
    "app": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "stateless": {
          "type": "boolean",
          "description": "If true, the app does not keep its own state, so the platform should do a closer diff to see if an item has changed since the last write"
        }
      }
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "html",
          "updated"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "html": {
            "type": "string",
            "description": "HTML to display for the item's label"
          },
          "data": {
            "type": "object",
            "description": "Extra structured data for use by chart or other formatters",
            "properties": {}
          },
          "updated": {
            "type": "string",
            "format": "date-time",
            "description": "Date the item was last updated"
          },
          "charts": {
            "type": "array",
            "description": "Charts to display for this item",
            "items": {
              "$ref": "#/$defs/chart"
            }
          },
          "notify": {
            "type": "array",
            "items": {
              "$ref": "#/$defs/notification"
            }
          }
        }
      }
    }
  },
  "$defs": {
    "chart": {
      "type": "object",
      "$comment": "Format to be determined",
      "properties": {}
    },
    "notification": {
      "type": "object",
      "required": [
        "id", "html"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        },
        "html": {
          "type": "string"
        }
      }
    }
  }
}
